{% import _self as macros %}

{% macro attributes(attributes) %}
    {% for key, value in attributes %}
        data-{{ key }}="{{ value }}"
    {% endfor %}
{% endmacro %}

<span {{ macros.attributes(attributes) }}>
    {{ data|raw }}
</span>
